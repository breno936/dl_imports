// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User{
  id Int @id @default(autoincrement())
  username String
  password String
}

model Sizes{
  id Int @id @default(autoincrement())
  size String
  products Product[] @relation("SizesProducts")
  destaques Destaques[] @relation("SizesDestaques")
  novidades Novidades[] @relation("SizesNovidades")
  maisVendidos MaisVendidos[] @relation("SizesVendidos")
  
  }

model Category{
  id Int @id @default(autoincrement())
  name String
  products Product[]
  destaques Destaques[]
  novidades Novidades[]
  maisVendidos MaisVendidos[]
}

model SubCategory{
  id Int @id @default(autoincrement())
  name String
  products Product[]
  destaques Destaques[]
  novidades Novidades[]
  maisVendidos MaisVendidos[]  
}

model Product{
  id Int @id @default(autoincrement())
  name String
  price Decimal
  description String
  tag String
  size Sizes[] @relation("SizesProducts")
  pictures Pictures[]
  category Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
  subCategory SubCategory? @relation(fields: [subCategoryId], references: [id])
  subCategoryId Int?
}

model Pictures{
  id Int @id @default(autoincrement())
  product Product? @relation(fields: [productId], references: [id])
  productId Int?
  destaques Destaques? @relation(fields: [destaquesId], references: [id])
  destaquesId Int?
  novidades Novidades? @relation(fields: [novidadesId], references: [id])
  novidadesId Int?
  maisVendidos MaisVendidos? @relation(fields: [maisVendidosId], references: [id])
  maisVendidosId Int?
  namePath String
}

model Destaques{
  id Int @id @default(autoincrement())
  name String
  price Decimal
  description String
  tag String
  pictures Pictures[]
  category Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
  size Sizes[] @relation("SizesDestaques")
  subCategory SubCategory? @relation(fields: [subCategoryId], references: [id])
  subCategoryId Int?
}

model CardDest{
  id Int @id @default(autoincrement())
  title String
  subTitle String
  picture String
}

model Novidades{
  id Int @id @default(autoincrement())
  name String
  price Decimal
  description String
  tag String
  pictures Pictures[]
  category Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
  size Sizes[] @relation("SizesNovidades")
  subCategory SubCategory? @relation(fields: [subCategoryId], references: [id])
  subCategoryId Int?
}

model MaisVendidos{
  id Int @id @default(autoincrement())
  name String
  price Decimal
  description String
  tag String
  pictures Pictures[]
  category Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
  size Sizes[] @relation("SizesVendidos")
  subCategory SubCategory? @relation(fields: [subCategoryId], references: [id])
  subCategoryId Int?
}

model DestBanner{
  id Int @id @default(autoincrement())
  title String
  picture String
}

model SlideHome{
  id Int @id @default(autoincrement())
  picture String
  title String
  subTitle String
  textButton String
  linkButton String
}